.modal
	position fixed
	display none
	width 100%
	height 100%
	top 0
	left 0
	background-color rgba(100, 100, 100, .7)
	z-index 20
	text-align center

	&:target
		display block

	&_visible
		display block

	&::before
		content ''
		display inline-block
		height 100%
		min-height inherit
		width 0
		line-height 100%
		vertical-align middle

	&__dialog
		display inline-block
		vertical-align middle
		position relative
		background-color #ffffff
		width 450px
		border-radius 3px
		padding 10px

	&__close
		display block
		position absolute
		top 0
		right 5px
		cursor pointer
		padding 5px
		text-decoration none
		color #666666

	&__number
		font-size 21px
		margin 10px 0

	&__logo
		img
			width 100%

	&__row
		display table
		width 100%
		margin 10px 0

	&__title
		display table-cell
		width 50%
		font-size 17px
		vertical-align middle

	&__value
		display table-cell
		width 50%
		font-size 19px
		border-left 1px solid #666666
		box-sizing border-box
		padding 5px 0
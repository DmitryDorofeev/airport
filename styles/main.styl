body
	margin 0
	padding 0
	font-family Arial, sans-serif
	color #f1f1f1

.board
	width 100%
	background-color #e67e22
	position relative
	
	&__control
		padding 20px
		
	
	&__header
		display table
		width 100%
		position relative
		padding 10px 0
		border-spacing 5px
		text-align center
		
		&_stick
			position fixed
		
		&__item
			display table-cell